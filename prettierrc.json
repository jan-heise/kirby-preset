{
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "bracketSpacing": false,
  "printWidth": 99999,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true
      }
    }
  ]
}
